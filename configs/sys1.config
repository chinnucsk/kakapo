[
 %% Riak Core config
{riak_core, [
            %% Default location of ringstate
            {ring_state_dir, "/tmp/data1/ring"},

            %% http is a list of IP addresses and TCP ports that the Riak
            %% HTTP interface will bind.
            {http, [ {"127.0.0.1", 8889 } ]},

            %% riak_handoff_port is the TCP port that Riak uses for
            %% intra-cluster data handoff.
            {handoff_port, 8199 }
            ]},

{riak_kv, [
          {storage_backend, riak_kv_multi_backend},
          {multi_backend_default, <<"memory_mult">>},
          {multi_backend, [
                          %% Here's where you set the individual multiplexed backends
                          {<<"bitcask_mult">>,  riak_kv_bitcask_backend, [
                                                                         {data_root, "/tmp/bitcask"}
                                                                         ]},
                          {<<"memory_mult">>,   riak_kv_memory_backend, [
                                                                        {test, true}
                                                                        ]}
                          ]}
          ]},

%% SASL config
{sasl, [
       {sasl_error_logger, {file, "log/sasl-error.log"}},
       {errlog_type, error},
       {error_logger_mf_dir, "log/sasl"},      % Log directory
       {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
       {error_logger_mf_maxfiles, 5}           % 5 files max
       ]}
].

